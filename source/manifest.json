{
  "manifest_version": 2,
  "name": "Ideamarket browser extension",
  "version": "1.0.0",

  "icons": {
    "16": "assets/icons/logo.png",
    "32": "assets/icons/logo.png",
    "48": "assets/icons/logo.png",
    "128": "assets/icons/logo.png"
  },
  "description": "Ideamarket browser extension helps displaying ranks in twitter substack etc.",
  "homepage_url": "https://ideamarket.io/",
  "short_name": "Ideamarket",

  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "__chrome|firefox__author": "ideamarket",
  "__opera__developer": {
    "name": "ideamarket"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/logo.png",
      "32": "assets/icons/logo.png",
      "48": "assets/icons/logo.png",
      "128": "assets/icons/logo.png"
    },
    "default_title": "Ideamarket",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },

  "background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "__chrome|opera__persistent": false
  },

  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "js/contentScript.bundle.js"
    ],
    "css": [ "css/contentScript.css" ]
  }]
}